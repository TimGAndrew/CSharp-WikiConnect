        <Grid.Background>
            <ImageBrush Stretch="Fill" 
                        ImageSource="Images/WikiConnectLogo1.png"/>
        </Grid.Background>

        <!--The Top Right Buttons-->
        <Button 
            x:Name="ExitButton" 
            Grid.Column="1"
            Height="54" 
            Width="51"
            VerticalAlignment="Top" 
            HorizontalAlignment="Right"
            Background="#33000000" 
            AutomationProperties.HelpText="Exit Program"
            ToolTipService.ToolTip="Exit Program">
            <SymbolIcon 
                Symbol="Cancel"/>
        </Button>

        <Button 
            x:Name="AboutButton" 
            Grid.Column="1"           
            Height="54" 
            Width="51"
            Margin="0,0,51,0"
            VerticalAlignment="Top" 
            HorizontalAlignment="Right"
            Background="#33000000"             
            AutomationProperties.HelpText="About WikiConnect"
            ToolTipService.ToolTip="About WikiConnect">
            <SymbolIcon 
                Symbol="Help"/>
        </Button>

        <!--The center block-->
        <GridView 
            x:Name="SearchBox" 
            Background="#C5163873" 
            HorizontalAlignment="center"
            VerticalAlignment="center"
            BorderThickness="10"  
            Width="750">

            <TextBox
                x:Name="StartQueryBox" 
                Width="650"
                Height="90" 
                Margin="50" 
                TextAlignment="Center"
                Text="" 
                FontFamily="Trebuchet MS"
                FontSize="50"
                AutomationProperties.HelpText="Enter A Beginning Query"
                ToolTipService.ToolTip="Enter A Beginning Query" 
                PlaceholderText="Beginning Query..."/>

            <TextBox 
                x:Name="EndQueryBox" 
                Width="650"
                Height="90" 
                TextAlignment="Center" 
                Text="" 
                Margin="50" 
                FontFamily="Trebuchet MS" 
                FontSize="50"
                AutomationProperties.HelpText="Enter A Destination Query"
                ToolTipService.ToolTip="Enter A Destination Query" 
                PlaceholderText="Destination Query..."/>

            <Button 
                x:Name="SearchButton" 
                Height="90" 
                Width="200"
                Margin="50"
                Foreground="#FFA2C1DA" 
                FontFamily="Trebuchet MS"  
                FontSize="50" 
                FontWeight="Bold" 
                AutomationProperties.HelpText="Search For Connections"
                ToolTipService.ToolTip="Search For Connections">
                <SymbolIcon 
                    Symbol="Find" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="-33,-44,0,15" Height="29" Width="23" >
                    <SymbolIcon.RenderTransform>
                        <CompositeTransform 
                            ScaleX="3" ScaleY="3"/>
                    </SymbolIcon.RenderTransform>
                </SymbolIcon>
            </Button>

        </GridView>
    </Grid>
</Page>
